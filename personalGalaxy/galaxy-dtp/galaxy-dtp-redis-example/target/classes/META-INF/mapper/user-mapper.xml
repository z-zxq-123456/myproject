<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dcits.galaxy.dtp.demo.entities.User" >

	<update id="updateUser" parameterType="com.dcits.galaxy.dtp.demo.entities.User">
		 update user set status= #{status},txid= #{txid} 
			where userId=#{userId}
	</update>
	
	<select id="getUser" resultType="com.dcits.galaxy.dtp.demo.entities.User" parameterType="com.dcits.galaxy.dtp.demo.entities.User">
		 select * from user where userId= #{userId}
	</select>
</mapper>