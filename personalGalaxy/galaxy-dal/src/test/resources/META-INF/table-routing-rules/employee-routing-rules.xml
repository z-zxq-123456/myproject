<rules>
	<!-- 以下为通用规则 -->
	<rule>
		<namespace>com.dcits.galaxy.dal.demo1.entities.Employee</namespace>
		<shardingExpression>hash.apply(sid) == 0</shardingExpression>
		<tableShards>EmployeePartion1</tableShards>
	</rule>
	<rule>
		<namespace>com.dcits.galaxy.dal.demo1.entities.Employee</namespace>
		<shardingExpression>hash.apply(sid) == 1</shardingExpression>
		<tableShards>EmployeePartion2</tableShards>
	</rule>
	
	<!-- 以下为特殊规则 -->
	<rule>
		<sqlmap>com.dcits.galaxy.dal.demo1.entities.Employee.findAll</sqlmap>
		<tableShards>EmployeePartion1, EmployeePartion2</tableShards>
	</rule>

	<rule>
		<sqlmaps>
			<sqlmap>com.dcits.galaxy.dal.demo1.entities.Employee.findMax</sqlmap>
			<sqlmap>com.dcits.galaxy.dal.demo1.entities.Employee.findMin</sqlmap>
			<sqlmap>com.dcits.galaxy.dal.demo1.entities.Employee.findCount</sqlmap>
			<sqlmap>com.dcits.galaxy.dal.demo1.entities.Employee.findSum</sqlmap>
			<sqlmap>com.dcits.galaxy.dal.demo1.entities.Employee.findMulti</sqlmap>
			<sqlmap>com.dcits.galaxy.dal.demo1.entities.Employee.findOrderBy</sqlmap>
			<sqlmap>com.dcits.galaxy.dal.demo1.entities.Employee.findPage</sqlmap>
			<sqlmap>com.dcits.galaxy.dal.demo1.entities.Employee.findByCondition</sqlmap>
			<sqlmap>com.dcits.galaxy.dal.demo1.entities.Employee.queryBatch</sqlmap>
		</sqlmaps>
		<tableShards>EmployeePartion1, EmployeePartion2</tableShards>
	</rule>
</rules>