<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dcits.galaxy.sequences.dao.SequencesDao">

    <sql id="fwSequencesColumns"> SEQ_NAME, SEQ_CURRENT_VALUE, SEQ_MAX_VALUE, SEQ_MIN_VALUE, SEQ_INCREMENT_BY, SEQ_CYCLE, SEQ_CACHE </sql>
     
    <insert id="insertSequence" parameterType="com.dcits.galaxy.sequences.model.Sequences">
        insert into fw_sequences
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="seqName != null">
                SEQ_NAME,
            </if>
            <if test="seqCurrentValue != null">
                SEQ_CURRENT_VALUE,
            </if>
            <if test="seqMaxValue != null">
                SEQ_MAX_VALUE,
            </if>
            <if test="seqMinValue != null">
                SEQ_MIN_VALUE,
            </if>
            <if test="seqIncrementBy != null">
                SEQ_INCREMENT_BY,
            </if>
            <if test="seqCycle != null">
                SEQ_CYCLE,
            </if>
            <if test="seqCache != null">
                SEQ_CACHE,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="seqName != null">
                #{seqName,jdbcType=VARCHAR},
            </if>
            <if test="seqCurrentValue != null">
                #{seqCurrentValue,jdbcType=DECIMAL},
            </if>
            <if test="seqMaxValue != null">
                #{seqMaxValue,jdbcType=DECIMAL},
            </if>
            <if test="seqMinValue != null">
                #{seqMinValue,jdbcType=DECIMAL},
            </if>
            <if test="seqIncrementBy != null">
                #{seqIncrementBy,jdbcType=DECIMAL},
            </if>
            <if test="seqCycle != null">
                #{seqCycle,jdbcType=VARCHAR},
            </if>
            <if test="seqCache != null">
                #{seqCache,jdbcType=DECIMAL},
            </if>
        </trim>
    </insert>
    <update id="updateSequence" parameterType="com.dcits.galaxy.sequences.model.Sequences">
        UPDATE fw_sequences
        <set>
            <if test="seqMaxValue != null">
                SEQ_MAX_VALUE=#{seqMaxValue,jdbcType=DECIMAL},
            </if>
            <if test="seqMinValue != null">
                SEQ_MIN_VALUE=#{seqMinValue,jdbcType=DECIMAL},
            </if>
            <if test="seqIncrementBy != null">
                SEQ_INCREMENT_BY=#{seqIncrementBy,jdbcType=DECIMAL},
            </if>
            <if test="seqCycle != null">
                SEQ_CYCLE=#{seqCycle},
            </if>
            <if test="seqCache != null">
                SEQ_CACHE=#{seqCache,jdbcType=DECIMAL},
            </if>
        </set>
        where SEQ_NAME = #{seqName,jdbcType=VARCHAR}
    </update>
    <update id="setNextSequence" parameterType="com.dcits.galaxy.sequences.model.Sequences">
        UPDATE fw_sequences
        SET SEQ_CURRENT_VALUE = #{seqCurrentValue,jdbcType=DECIMAL}
        where SEQ_NAME = #{seqName,jdbcType=VARCHAR}
    </update>
    <select id="getSequence" parameterType="com.dcits.galaxy.sequences.model.Sequences"
            resultType="com.dcits.galaxy.sequences.model.Sequences">
        SELECT <include refid="fwSequencesColumns"/> from fw_sequences where SEQ_NAME = #{seqName,jdbcType=VARCHAR} FOR UPDATE
    </select>
    <select id="getSequenceNoWait" parameterType="com.dcits.galaxy.sequences.model.Sequences"
            resultType="com.dcits.galaxy.sequences.model.Sequences">
        SELECT <include refid="fwSequencesColumns"/> from fw_sequences where SEQ_NAME = #{seqName,jdbcType=VARCHAR}
    </select>
    <select id="getCacheSequences" resultType="com.dcits.galaxy.sequences.model.Sequences">
        SELECT <include refid="fwSequencesColumns"/> from fw_sequences where SEQ_CACHE > 0
    </select>
</mapper>