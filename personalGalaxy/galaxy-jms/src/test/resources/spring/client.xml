<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="targetConnectionFactory" class="org.apache.activemq.ActiveMQConnectionFactory">
		<property name="brokerURL"
			value="tcp://119.253.84.71:61616?jms.prefetchPolicy.all=10" />
	</bean>

	<bean id="reciecveDestination" class="org.apache.activemq.command.ActiveMQQueue">
		<constructor-arg value="queue.dest" />
	</bean>

	<bean id="dest" class="org.apache.activemq.command.ActiveMQQueue">
		<constructor-arg value="queue.reply" />
	</bean>
	
	<bean id="jmsTemplate" class="com.dcits.galaxy.jms.SyncJmsTemplate">
		<property name="connectionFactory" ref="targetConnectionFactory" />
		<property name="defaultDestination" ref="reciecveDestination" />
		<property name="replyDestination" ref="replyDestination" />
		<property name="receiveTimeout" value="1000" />
		<!-- 
		<property name="timeToLive" value="10000" />
		 -->
		<property name="explicitQosEnabled" value="true" />
		<property name="DeliveryPersistent" value="false" />
	</bean>
</beans>  
