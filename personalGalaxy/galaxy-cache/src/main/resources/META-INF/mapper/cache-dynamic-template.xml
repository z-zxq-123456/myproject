<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="galaxy.cache.dynamicTemplate">
	<select id="dynamic_initselect" parameterType="java.util.HashMap" resultType="java.util.LinkedHashMap">
		SELECT *  FROM ${tableName} WHERE ${whereCon}
	</select>
	<select id="dynamic_selectbypk" parameterType="java.util.HashMap" resultType="java.util.LinkedHashMap">
		SELECT *  FROM ${tableName} WHERE ${whereCon}
	</select>
	<select id="dynamic_selectlist" parameterType="java.util.HashMap" resultType="java.util.LinkedHashMap">
		SELECT *  FROM ${tableName} WHERE ${whereCon}
	</select>
	<insert id="dynamic_insert"  parameterType="java.util.HashMap">
		INSERT INTO ${tableName} (${insertCol}) VALUES (${insertValue})
	</insert>
	<update id="dynamic_update"  parameterType="java.util.HashMap">
		UPDATE ${tableName} SET  ${updateCol} WHERE ${whereCon}
	</update>
	<delete id="dynamic_delete"  parameterType="java.util.HashMap">
		DELETE FROM ${tableName} WHERE ${whereCon}
	</delete>
</mapper>