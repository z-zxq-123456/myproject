<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dcits.ensemble.om.cmc.dao.BaseDbTableDao">

    <select id="selectByPrimaryKey" parameterType="java.util.HashMap" resultType="java.util.HashMap">
        select * FROM ${tableName}
        WHERE ${pk_name} = #{pk_value}
         <if test="columnStatus != null">
             AND COLUMN_STATUS = #{columnStatus}
         </if>
    </select>

    <select id="getAllContrast" parameterType="java.util.HashMap" resultType="java.util.HashMap">
        select *
        from ${tableName}
        where
        COLUMN_STATUS !='Y'
    </select>

    <select id="getAllStatus" parameterType="java.util.HashMap" resultType="java.util.HashMap">
        select *
        from ${tableName}
    </select>

    <delete id="delete" parameterType="java.util.HashMap">
        DELETE  from ${tableName}
        WHERE
        <if test="columnStatus != null">
            COLUMN_STATUS = #{columnStatus}
        </if>
        <if test="cardProductCode != null">
            AND CARD_PRODUCT_CODE = #{cardProductCode}
        </if>
    </delete>
</mapper>