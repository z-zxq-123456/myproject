<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dcits.ensemble.om.pm.dao.paraSetting.ParaSystemOrgDao">
  <!-- Created by maruie on 2016/03/30 16:57:46. -->
  <select id="selectByPrimaryKey" parameterType="com.dcits.ensemble.om.pm.module.paraSetting.ParaSystemOrg" resultType="com.dcits.ensemble.om.pm.module.paraSetting.ParaSystemOrg">
    select *
    from PARA_SYSTEM_ORG
    where SYSTEM_ID = #{systemId,jdbcType=VARCHAR}
  </select>
  <select id="findList" parameterType="com.dcits.ensemble.om.pm.module.paraSetting.ParaSystemOrg" resultType="com.dcits.ensemble.om.pm.module.paraSetting.ParaSystemOrg">
    SELECT * FROM PARA_SYSTEM_ORG
  </select>

  <select id="getSystem"  resultType="com.dcits.dynamic.web.mapper.PkList">
    select
    <if test="_databaseId == 'oracle'">
      SYSTEM_ID pk_value , SYSTEM_NAME || ', ' || SYSTEM_DESC pk_desc
    </if>
    <if test="_databaseId == 'mysql'">
      SYSTEM_ID pk_value,concat(SYSTEM_NAME,', ',SYSTEM_DESC) pk_desc
    </if>
    from PARA_SYSTEM_ORG
  </select>


  <select id="getSystemIgnoreProd"  resultType="com.dcits.dynamic.web.mapper.PkList">
    select
    <if test="_databaseId == 'oracle'">
      SYSTEM_ID pk_value , SYSTEM_NAME || ', ' || SYSTEM_DESC pk_desc
    </if>
    <if test="_databaseId == 'mysql'">
      SYSTEM_ID pk_value,concat(SYSTEM_NAME,', ',SYSTEM_DESC) pk_desc
    </if>
    from PARA_SYSTEM_ORG
    WHERE SYSTEM_NAME != 'PROD'
  </select>

  <delete id="deleteByPrimaryKey" parameterType="com.dcits.ensemble.om.pm.module.paraSetting.ParaSystemOrg">
    delete from PARA_SYSTEM_ORG
    where SYSTEM_ID = #{systemId,jdbcType=VARCHAR}
  </delete>
  <update id="updateByPrimaryKey" parameterType="com.dcits.ensemble.om.pm.module.paraSetting.ParaSystemOrg">
    update PARA_SYSTEM_ORG
    <set>
      <if test="systemName != null">
        SYSTEM_NAME = #{systemName,jdbcType=VARCHAR},
      </if>
      <if test="systemDesc != null">
        SYSTEM_DESC = #{systemDesc,jdbcType=VARCHAR}
      </if>
    </set>
    where SYSTEM_ID = #{systemId,jdbcType=VARCHAR}
  </update>
  <insert id="insert" parameterType="com.dcits.ensemble.om.pm.module.paraSetting.ParaSystemOrg">
    insert into PARA_SYSTEM_ORG
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="systemId != null">
        SYSTEM_ID,
      </if>
      <if test="systemName != null">
        SYSTEM_NAME,
      </if>
      <if test="systemDesc != null">
        SYSTEM_DESC,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="systemId != null">
        #{systemId,jdbcType=VARCHAR},
      </if>
      <if test="systemName != null">
        #{systemName,jdbcType=VARCHAR},
      </if>
      <if test="systemDesc != null">
        #{systemDesc,jdbcType=VARCHAR},
      </if>
    </trim>
  </insert>
</mapper>