<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
						http://www.springframework.org/schema/beans/spring-beans.xsd
						http://www.springframework.org/schema/context
						http://www.springframework.org/schema/context/spring-context.xsd
						http://www.springframework.org/schema/mvc
      					http://www.springframework.org/schema/mvc/spring-mvc.xsd">
    <!-- 开启注解配置 -->
    <mvc:annotation-driven/>
    <mvc:default-servlet-handler/>
    <!-- 自动扫描注册Controller、Service -->
    <context:component-scan base-package="com.dcits.ensemble.om.bh">
        <context:include-filter type="regex"
                                expression="com\.dcits\.ensemble\.om\.bh\.dao\.*\..*"/>
        <context:include-filter type="regex"
                                expression="com\.dcits\.ensemble\.om\.bh\.action\.*\..*"/>
        <context:include-filter type="regex"
                                expression="com\.dcits\.ensemble\.om\.bh\.service\.*\..*"/>
    </context:component-scan>
    <context:component-scan base-package="com.dcits.ensemble.om.oms" />
    <context:component-scan base-package="com.dcits.ensemble.om.pf">
        <context:include-filter type="regex"
                                expression="com\.dcits\.ensemble\.om\.pf\.dao\.*\..*"/>
        <context:include-filter type="regex"
                                expression="com\.dcits\.ensemble\.om\.pf\.action\.*\..*"/>
        <context:include-filter type="regex"
                                expression="com\.dcits\.ensemble\.om\.pf\.service\.*\..*"/>
    </context:component-scan>
    <context:component-scan base-package="com.dcits.ensemble.om.pm">
        <context:include-filter type="regex"
                                expression="com\.dcits\.ensemble\.om\.pm\.dao\.*\..*"/>
        <context:include-filter type="regex"
                                expression="com\.dcits\.ensemble\.om\.pm\.action\.*\..*"/>
        <context:include-filter type="regex"
                                expression="com\.dcits\.ensemble\.om\.pm\.service\.*\..*"/>
    </context:component-scan>
    <context:component-scan base-package="com.dcits.ensemble.om.up">
        <context:include-filter type="regex"
                                expression="com\.dcits\.ensemble\.om\.up\.dao\.*\..*"/>
        <context:include-filter type="regex"
                                expression="com\.dcits\.ensemble\.om\.up\.action\.*\..*"/>
        <context:include-filter type="regex"
                                expression="com\.dcits\.ensemble\.om\.up\.service\.*\..*"/>
    </context:component-scan>
    <context:component-scan base-package="com.dcits.ensemble.om.cmc">
        <context:include-filter type="regex"
                                expression="com\.dcits\.ensemble\.om\.cmc\.dao\.*\..*"/>
        <context:include-filter type="regex"
                                expression="com\.dcits\.ensemble\.om\.cmc\.action\.*\..*"/>
        <context:include-filter type="regex"
                                expression="com\.dcits\.ensemble\.om\.cmc\.service\.*\..*"/>
    </context:component-scan>

    <context:component-scan base-package="com.dcits.dynamic.web">
        <context:include-filter type="regex"
                                expression="com\.dcits\.dynamic\.web\.dao\.*\..*"/>
        <context:include-filter type="regex"
                                expression="com\.dcits\.dynamic\.web\.action\.*\..*"/>
        <context:include-filter type="regex"
                                expression="com\.dcits\.dynamic\.web\.service\.*\..*"/>
    </context:component-scan>
    <bean id="multipartResolver1" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
        <property name="defaultEncoding" value="utf-8"></property>
        <property name="maxUploadSize" value="485760000"></property> <!-- 最大上传文件大小 -->
        <property name="maxInMemorySize" value="10960"></property>
    </bean>

    <!-- springmvc上传文件时，需要配置MultipartResolver处理器 -->
    <bean id="multipartResolver" class="com.dcits.ensemble.om.oms.common.CustomMultipartResolver">
        <property name="defaultEncoding" value="UTF-8" />
        <!-- 指定的上传文件总大小不能大于200m -->
        <property name="maxUploadSize"   value="200000000" />
        <property name="resolveLazily"   value="true" />
    </bean>
    <bean id="jspViewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="viewClass" value="org.springframework.web.servlet.view.JstlView" />
        <property name="prefix" value="/" />
        <property name="suffix" value=".jsp" />
    </bean>


    <!-- SpringMVC异常处理器 -->
    <bean id="WebExceptionHandler" class="com.dcits.dynamic.web.exception.WebExceptionHandler"/>

    <mvc:interceptors>
        <mvc:interceptor>
            <mvc:mapping path="/*"/>
            <mvc:mapping path="/*/*"/>
            <mvc:exclude-mapping path="/" />
            <mvc:exclude-mapping path="/login.jsp" />
            <mvc:exclude-mapping path="/error.jsp" />
            <mvc:exclude-mapping path="/js/**" />
            <mvc:exclude-mapping path="/images/**" />
            <mvc:exclude-mapping path="/lib/**" />
            <mvc:exclude-mapping path="/css/**" />
            <mvc:exclude-mapping path="/getLogin" />
            <mvc:exclude-mapping path="/pwdSSOLogin" />
            <mvc:exclude-mapping path="/tokenSSOLogin"/>
            <bean class="com.dcits.dynamic.web.interceptor.LoginInterceptor"></bean>
        </mvc:interceptor>
    </mvc:interceptors>
</beans>