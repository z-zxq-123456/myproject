<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:dcits="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context-3.0.xsd
		http://code.alibabatech.com/schema/dubbo
        http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <context:component-scan base-package="com.dcits.orion.core">
    </context:component-scan>
    <bean id="propertyConfigurerBussiness"
          class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="ignoreUnresolvablePlaceholders" value="true"/>
        <property name="locations">
            <list>
                <value>classpath*:galaxy.properties</value>
            </list>
        </property>
    </bean>

    <!-- 枚举类型注入到类中，需要使用FieldRetrievingFactoryBean类将枚举类型转换为bean，在其他类需要注入枚举类型时，ref引用此bean -->
    <bean id="PARAM_CACHE" class="org.springframework.beans.factory.config.FieldRetrievingFactoryBean">
        <property name="staticField" value="com.dcits.orion.core.dao.BaseDao.CacheType.PARAM_CACHE"/>
    </bean>

    <bean id="BUSINESS_CACHE" class="org.springframework.beans.factory.config.FieldRetrievingFactoryBean">
        <property name="staticField" value="com.dcits.orion.core.dao.BaseDao.CacheType.BUSINESS_CACHE"/>
    </bean>
    <!-- ***************************************行级缓存配置 end******************************** -->

    <!-- 加密转加密组件 -->
    <bean id="encryptUtil" class="com.dcits.orion.core.encrypt.EncryptUtil">
        <property name="configLocation" value="classpath:ext/fieldEncryptDecrypt.xml"/>
    </bean>

    <!-- 防重处理组件 -->
    <bean id="antiRepeatUtil" class="com.dcits.orion.core.antirepeate.AntiRepeatUtil">
        <property name="configLocation" value="classpath:ext/antiRepeatCfg.xml"/>
    </bean>

    <bean id="businessHandler" class="com.dcits.orion.core.support.BusinessHandler">
        <property name="service" ref="businessService"/>
    </bean>
    <bean id="businessService" class="com.dcits.orion.core.support.BusinessService"/>

    <!-- ***************************************报文转换部分 end******************************** -->
    <!-- galaxy服务代理，实现IService RPC远程服务 -->
    <dcits:service group="${galaxy.application.group}" interface="com.dcits.orion.api.Handler"
                   ref="businessHandler"/>

    <!-- submitLogAspect -->
    <bean class="com.dcits.galaxy.dtp.annotation.SubmitLogAspect" factory-method="aspectOf">
        <property name="logIdSequence" ref="businessDtpSequence"/>
    </bean>
    <!-- dtpSequence 实现 -->
    <bean id="businessDtpSequence" class="com.dcits.orion.core.dtp.DtpSequence"/>
</beans>