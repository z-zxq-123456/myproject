<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
    <!-- 加载资源配置文件 -->
    <bean id="propertyConfigurerBusiAdapter"
          class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="ignoreUnresolvablePlaceholders" value="true"/>
        <property name="locations">
            <list>
                <value>classpath*:galaxy.adapter.properties</value>
            </list>
        </property>
    </bean>
    <!-- http源 -->
    <bean id="httpTest" class="com.dcits.galaxy.adapter.HttpAdapter">
        <property name="url" value="${http.adapter.url}"/>
        <property name="readTimeout" value="${http.adapter.readTimeout}"/>
        <property name="encoding" value="${http.adapter.msg.charset}"/>
    </bean>
</beans>